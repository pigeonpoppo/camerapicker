  "shortcuts": [
    {
      "name": "カメラ本体を選ぶ",
      "short_name": "カメラ本体",
      "description": "カメラボディの選択を開始",
      "url": "/pick.html?mode=body",
      "icons": [
        {
          "src": "images/icons/camera-shortcut.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "レンズを選ぶ",
      "short_name": "レンズ",
      "description": "レンズの選択を開始",
      "url": "/pick.html?mode=lens",
      "icons": [
        {
          "src": "images/icons/lens-shortcut.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "診断結果を見る",
      "short_name": "診断結果",
      "description": "過去の診断結果を確認",
      "url": "/result.html",
      "icons": [
        {
          "src": "images/icons/result-shortcut.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "images/screenshots/home-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide"
    },
    {
      "src": "images/screenshots/pick-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide"
    },
    {
      "src": "images/screenshots/home-mobile.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow"
    },
    {
      "src": "images/screenshots/pick-mobile.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+camerapicker",
      "url": "/?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ]
}